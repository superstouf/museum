<p id="notice"><%= notice %></p>


<h1> ARTWORKS MUSEUM</h1>
<h1> COLORS OF JAPAN </h1>
<h2> Stephen NICOLAS </h2>


<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Dimensions</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.author %></td>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= art.date %></td>
        <td><%= art.dimensions %></td>
        <td><img src="<%= art.photo %>" width=400px </td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

